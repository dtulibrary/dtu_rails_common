<div class="navbar-right">

  <% if respond_to? :current_user %>
    <ul class="nav navbar-nav">
      <% if current_user %>
        <li>
          <%= link_to t('dtu.logout'), '/logout' %>
        </li>
        <% unless current_user.to_s.blank? -%>
          <li>
            <%= link_to current_user, '/profile' %>
          </li>
        <% end %>
      <% else %>
        <li>
          <%= link_to t('dtu.login'), user_omniauth_authorize_path(:cas) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
